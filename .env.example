# =============================================================================
# Django 配置
# =============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# 数据库配置
DATABASE_NAME=code_review

# SQLite数据库配置
SQLITE_DATABASE=db.sqlite3

# =============================================================================
# GitLab 配置
# =============================================================================
GITLAB_SERVER_URL=https://gitlab.com
GITLAB_PRIVATE_TOKEN=your-gitlab-private-token

# =============================================================================
# LLM 配置
# =============================================================================
LLM_PROVIDER=deepseek
LLM_API_KEY=your-llm-api-key
LLM_MODEL=deepseek-chat
LLM_API_BASE=https://api.deepseek.com

# 模拟模式（用于测试）
CODE_REVIEW_MOCK_MODE=False

# =============================================================================
# 通知配置
# =============================================================================
# 钉钉机器人
DINGDING_BOT_WEBHOOK=your-dingding-webhook-url

# Slack
SLACK_WEBHOOK_URL=your-slack-webhook-url

# 飞书
FEISHU_WEBHOOK_URL=your-feishu-webhook-url

# 企业微信
WECHAT_WORK_WEBHOOK_URL=your-wechat-work-webhook-url

# 邮件配置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# =============================================================================
# Redis 配置
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Claude CLI 配置（可选）
# =============================================================================
CLAUDE_CLI_PATH=claude
CLAUDE_CLI_TIMEOUT=300

# =============================================================================
# 文件过滤配置
# =============================================================================
# 排除的文件类型（用逗号分隔）
EXCLUDE_FILE_TYPES=.sql,.dump,.lock,.log,.tmp,.bak

# 忽略的文件类型（用逗号分隔）
IGNORE_FILE_TYPES=.md,.txt,.json,.xml,.yml,.yaml

# =============================================================================
# 开发环境特定配置
# =============================================================================
# 时区
TIME_ZONE=Asia/Shanghai

# 语言
LANGUAGE_CODE=zh-hans

# 日志级别
LOG_LEVEL=INFO