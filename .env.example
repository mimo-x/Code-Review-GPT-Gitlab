# =============================================================================
# Django 配置
# =============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=*

# 数据库配置
DATABASE_NAME=code_review

# SQLite数据库配置
SQLITE_DATABASE=db.sqlite3

# LLM、通知渠道及邮件等配置已迁移至数据库（请通过后台管理进行设置）

# =============================================================================
# Redis 配置
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# OpenCode CLI 配置（可选）
# =============================================================================
OPENCODE_CLI_PATH=opencode
OPENCODE_CLI_TIMEOUT=300

# =============================================================================
# 前端配置
# =============================================================================
# Web 前端访问后端 API 的基础路径
VITE_API_BASE_URL=/api
VITE_APP_TITLE=Code Review Admin
VITE_APP_DESCRIPTION=AI代码审查管理系统
VITE_DEV_PROXY_TARGET=http://backend:8000

# =============================================================================
# 文件过滤配置
# =============================================================================
# 排除的文件类型（用逗号分隔）
EXCLUDE_FILE_TYPES=.sql,.dump,.lock,.log,.tmp,.bak

# 忽略的文件类型（用逗号分隔）
IGNORE_FILE_TYPES=.md,.txt,.json,.xml,.yml,.yaml

# =============================================================================
# 开发环境特定配置
# =============================================================================
# 时区
TIME_ZONE=Asia/Shanghai

# 语言
LANGUAGE_CODE=zh-hans

# 日志级别
LOG_LEVEL=INFO
