# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
# 默认使用SQLite，无需额外配置
# 如需使用MongoDB，请设置 USE_MONGODB=True 并配置以下项
USE_MONGODB=False

# MongoDB Configuration (Optional)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_NAME=code_review_gpt
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin

# GitLab Configuration
GITLAB_SERVER_URL=https://gitlab.com
GITLAB_PRIVATE_TOKEN=your-gitlab-token
GITLAB_MAX_FILES=50

# DingTalk Configuration (Optional)
DINGDING_BOT_WEBHOOK=
DINGDING_SECRET=

# Code Review Settings
EXCLUDE_FILE_TYPES=.py,.java,.class,.vue,.go,.c,.cpp
IGNORE_FILE_TYPES=mod.go
CONTEXT_LINES_NUM=5

# LLM Configuration
LLM_PROVIDER=deepseek
LLM_API_KEY=your-llm-api-key
LLM_API_BASE=
LLM_MODEL=deepseek-chat

# CORS Settings - 生产环境需要配置前端域名
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
